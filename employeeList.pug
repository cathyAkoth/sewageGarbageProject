doctype html
html(lang='en')
  head
    meta(charset="UTF-8")
    meta(name="viewpoint" content="=*width=device-width, initial-scale=1.0*")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")

    link(rel='stylesheet', href='/css/driver.css')
    
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl', crossorigin='anonymous')
    title register employees
    
    

    body

    
      .header
        h1
          | STAY CLEAN-
          i THE CLEANEST OPTION

    .container
      
      .row
        .col-8 col-8
         .card
        .card-body

         div.col.form-group
           
        div.pull-right
         div.col.form-group.col-md-12   
            form.search(action='/employee')
                div.form-row
                    .col-md-8 
                        input.form-control(name='nin' placeholder="Enter your search term(nin) ...")
                    div.col-md-4
                        input.btn.btn-dark.btn-block(type="submit")   

                        
      table.table
      table.table.table-hover
        thead.table-dark
        
          
              tr
                  th Full Name 
                  th NIN
                  th Gender
                  th age 
                  th date
                  th password
                  th phone number
                  th user name 
                  th
                  th
            
              tbody.table.table-hover
              
                if users.length
                each user in users
                    tr
                    td #{user.lastname +' '+ user.firstname}
                    td #{user.nin}
                    td #{user.gender}
                    td #{user.age}
                    td #{user.date}
                    td #{user.password}
                    td #{user.telephoneNo}
                    td #{user.username}
                    td
                       a(class='button' , href='/employee/update/'+user._id) Update 
                       td
                        form(method="post" action='/employee/delete')
                            input(type="hidden", placeholder="", name="id", value=user._id)
                            button.btn.btn-dark.btn-block(type="submit") Delete
    div.form-row
        div.pull-right
            a(class='button', href='/employee/employeeReg') New Employee
        
        
        
