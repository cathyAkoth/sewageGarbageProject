        style.
         header{
          background-color: #fff;
          display: flex;
          justify-content: space-between;
          padding: 1rem;
          box-shadow: 2px 2px 5px rgba(0,0,0,0.2);
          position: fixed;
          left: 0;
          width: 100%;
          top:0;
          z-index: 100;
          transition: left 300ms;
          color:green
          }
          #nav-toggle{
          display:none;
          }
          header h2{
          color: green;
          }

          header label span{
          font-size: 1.7rem;
          padding-right: 1rem;

            }
    

        body

  
          
          .main-content
            header
              h2
                .header-title
                  label(for='')
                    span.las.la-bars
                  |                 STAY CLEAN
              |                 
              
           
          .recent-grid
            .Projects
              .card
                .card-header
                  h3 Registered users List.
                  |                         
                  button
                  
                    span.las.la-arrow-right
                      
                    | see all
                  
                    
                |                   
                .card-body

                table(width='100%')
                  thead
                          
                  
            
                    tr
                        th Name
                        th username
                        th 
                        th

                  tbody
                    if users.length
                    each user in users
                        tr
                            td #{user.lname +''+ fname}
                            td #{user.username}
                            td                          
                            td
                                a(href='/signUp/update/'+user._id) Update 
                            td
                                form(method="post" action='/signUp/delete')
                                    input(type="hidden", placeholder="", name="id", value=user._id)
                                    button.btn.btn-success.btn-block(type="submit") Delete

                          
