          .card 
            h5 TRUCK REGISTRATION FORM
            .card-body 
            
              form(method='POST',action='/truck/truckReg', name='truckRegForm')

                label(for='regNumber') REGISTRATION NUMBER
                |         
                input#regNumber(type='string', name='regNumber', placeholder="reg No.")
                |     
                |         
                label(for='codeNumber') TRUCK CODE NUMBER
                |         
                input#codeNumber(type='string', name='codeNumber', placeholder="code No. ")
                |     
                label(for='truckService') TYPE OF TRUCK
                select#truckService(name='truckService')
                    option(value='')

                    option(value='sewage') Sewage Truck
                                  
                    option(value='garbage') Garbage Truck  

                

                label(for='driver') Allocate Driver 2:
                          select#driver(name='driver')
                            option() choose driver 
                              // if any truck recorded in database.
                            if driverReg.length 
                            // iterating through truck./looping.
                            each person in driverReg 
                                option(value=`nin: ${person.nin} Gender: ${person.gender}`) #{person.nin}
                input(type='submit', value='Register Truck')

            script.
              const number1 = document.truckRegForm.regNumber;
              const number2 = document.truckRegForm.codeNumber;
              const service1 = document.truckRegForm.truckService;

              const regNumFunction = () => {
                if(number1.value === ''){
                  alert('please fill in Registration number');
                  number1.style.border = '2px solid red';
                  number1.focus();
                  event.preventDefault();
                 
                }else{
                  return true;
                }
                return true
              };

                const codeNumFunction = () => {
                const reg1 = /[A-Z]{3}[0-9]{3}/

                if (number2.value === ''){
                
                    alert('please fill in truck code');
                    number2.style.border = '2px Solid red';
                    number2.focus();
                    event.preventDefault();
                  }else{
                  if(!number2.value.match(reg1)){
                    number2.style.border = '2px solid red';
                    alert('code not correct');
                    number2.focus();
                    event.preventDefault();
                  return false;
                  }
                  return true;
                  }
                  return true;
                }

                const serviceFunction = () =>{
                  if(service1.value === ''){
                    service1.style.border = '2px solid red';
                    alert('please select field')
                    service1.focus();
                    event.preventDefault();
                  }else{
                    return true;
                  }
                  return true
                };
                    

              const validation = () => {
                regNumFunction();
                codeNumFunction();
                serviceFunction();
                
                 
              };
              document.truckRegForm.addEventListener('submit', validation);
               
            script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js', integrity='sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0', crossorigin='anonymous')