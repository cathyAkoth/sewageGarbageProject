doctype html
doctype html
html(lang='en')
  head
    meta(charset="UTF-8")
    meta(name="viewpoint" content="=*width=device-width, initial-scale=1.0*")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")

    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl', crossorigin='anonymous')
    
    title register truck drivers
    style.
      input[type=text], select {
      width: 100%;
      padding: 12px 20px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
      background-color:rgb(209, 214, 216);
      }
      input[type=time], select {
      width: 100%;
      padding: 12px 20px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
      background-color:rgb(209, 214, 216);
      }
      input[type=number], select {
      width: 100%;
      padding: 12px 20px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
      background-color:rgb(209, 214, 216);
      }
      input[type=date], select {
      width: 100%;
      padding: 12px 20px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
      background-color:rgb(209, 214, 216);
      }
      H3{
      text-align: center;
      }
      input[type=submit] {
      width: 100%;
      background-color: #4CAF50;
      color: white;
      padding: 14px 20px;
      margin: 8px 0;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      }
      input[type=submit]:hover {
      background-color: #45a049;
      }
      div {
      border-radius: 5px;
      background-color: #f2f2f2;
      padding: 20px;
      max-width: 400px;
      margin: 0 auto
      }
  body
    h3 CUSTOMER SERVICE REQUEST FORM
    div
      form(action='#', name='customerRequestForm')
        label(for='fname') First Name
        |     
        input#fname(type='text', name='firstname', placeholder="customer's First Name")
        |     
        label(for='lname') Last Name
        |     
        input#lname(type='text', name='lastname', placeholder="customer's First Name")
        |     
        label(for='lname') Other Names
        |     
        input#lname(type='text', name='lastname', placeholder="customer's Other Names")
        |     
        label(for='service') Service
        |     
        select#service(name='service')
          option(value='subscription') Sewage
          |       
          option(value='one time') Garbage
        |       
        label(for='nin') NIN
        |       
        input#nin(type='text', name='nin', placeholder="Customer's Identification Number", *='')
        |       
        label(for='noTrucks') Number Of Trucks
        |       
        select#noTrucks(name='noTrucks')
          option(value='none')
          |  
          |         
          option(value='one') 1
          |         
          option(value='two') 2
          |         
          option(value='three') 3
          |         
          option(value='four') 4
          |         
          option(value='five') 5
          |         
          option(value='six') 6
          |         
          option(value='seven') 7
        |     
        label(for='D.O.R') Date for service:
        |     
        input(type='date', id='D.O.R', name='Date for service')
        |     
        label(for='appt') Select a time:
        |     
        input#appt(type='time', name='appt')
        |     
        label(for='phone') Phone Number:
        |     
        input#phone(type='text', placeholder="Customer's Phone Number ")
        |     
        |     
        label(for='tor') Type of request
        |     
        select#tor(name='tor')
          option(value='subscription') subscription
          |       
          option(value='one time') one time
        input(type='submit', value='Submit')
