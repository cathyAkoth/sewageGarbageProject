extends layout
block content         


  title stay clean

  style.
    
    form.example input[type=text] {
        padding: 10px;
        font-size: 17px;
        border: 1px solid grey;
        /*float: center;*/
        width: 80%;
        left:20%;
        right:20%;
        background: #f1f1f1;
      }

      /* Style the submit button */
      form.example button {
        float: right;
        width: 20%;
        padding: 15px;
        background: orange;
        color: white;
        font-size: 17px;
        border: 1px solid grey;
        border-left: none; /* Prevent double borders */
        cursor: pointer;
        border-radius:2px;
      }

      form.example button:hover {
        background: orangeRed;
      }

      i.las{
     font-size:30px;
     color:green;
      }

      i.fa{
       color:green; 
      }

      span.las{
      font-size:30px;
      color:green;
      }

      /* Clear floats */
      form.example::after {
        content: "";
        clear: both;
        display: table;
      }
      body{
        background:green;
      }
    header{
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    padding: 1rem;
    box-shadow: 2px 2px 5px rgba(0,0,0,0.2);
    position: fixed;
    left: 0;
    width: 100%;
    top:0;
    z-index: 100;
    transition: left 300ms;
    color:green
    }
    #nav-toggle{
    display:none;
    }
    header h2{
    color: green;
    }

    header label span{
    font-size: 1.7rem;
    padding-right: 1rem;

      }
    .card{
        width:80%;
        left:10%;
        right:10%;
        top: 10%;
    }
    
  
     


  body


    
    .main-content
      header
        h2
          .header-title
            label(for='')
              span.las.la-bars
            |                 STAY CLEAN
        |                 
        
      
    .recent-grid
      .Projects
        .card
          .card-header
            h3 TRUCK PAYMENT LIST
            |                         
            form.example(action='/truckPayment')
                  input(type='text', placeholder='Search..', date='date')
                  |   
                  button(type='submit')
                    i.fa.fa-search
            
            
            button
            
              span.las.la-arrow-right
                
              | see all
            
              
          |                   
          .card-body

          
          table
          table.table.table-hover
            thead
                    
            
      
              tr
                  th DATE OF SERVICE
                  th TRUCK ALLOCATED
                  th SERVICE TYPE
                  th PRICE
                  th PAYMENT PLAN
                  th ACTUAL AMOUNT PAID
                  th 
                  th 
                  
                  

            tbody
              if users.length
              each user in users
                  tr
                      td #{user.date}
                      td #{user.truckCode}
                      td #{user.service}
                      td #{user.charge}
                      td #{user.paymentPlan}
                      td #{user.actualAmount}
                     
                      
                      
                      td
                            //-   a(href='/driver/update/'+user._id)
                            //-     span.icon 
                            //-       i.las.la-edit 
                      td
                          form(method="post" action='/truckPayment/delete')
                              input(type="hidden", placeholder="", name="id", value=user._id)
                              button.btn.btn-success.btn-block(type="submit") Delete

                    
