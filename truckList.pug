extends layout
block content
    
    title stay clean
    style.

      * {
        box-sizing: border-box;
      }

      /* Style the search field */
      form.example input[type=text] {
        padding: 10px;
        font-size: 17px;
        border: 1px solid grey;
        /*float: center;*/
        width: 80%;
        left:20%;
        right:20%;
        background: #f1f1f1;
      }

      /* Style the submit button */
      form.example button {
        float: right;
        width: 20%;
        padding: 15px;
        background: orange;
        color: white;
        font-size: 17px;
        border: 1px solid grey;
        border-left: none; /* Prevent double borders */
        cursor: pointer;
        border-radius:2px;
      }

      form.example button:hover {
        background: orangeRed;
      }

      i.las{
     font-size:30px;
     color:green;
      }

      i.fa{
       color:green; 
      }

      span.las{
      font-size:30px;
      color:green;
      }

      /* Clear floats */
      form.example::after {
        content: "";
        clear: both;
        display: table;
      }
      body{
        background:green;
      }

      header{
      background-color: #fff;
      display: flex;
      justify-content: space-between;
      padding: 1rem;
      box-shadow: 2px 2px 5px rgba(0,0,0,0.2);
      position: fixed;
      left: 0;
      width: 100%;
      top:0;
      z-index: 100;
      transition: left 300ms;
      color:green
      }
      #nav-toggle{
      display:none;
      }
      header h2{
      color: green;
      }

      header label span{
      font-size: 1.7rem;
      padding-right: 1rem;

        }
      .card{
        width:80%;
        left:10%;
        right:10%;
        top: 10%;
        


      }
      .table{
        width:80%;
        left:20%;
        right:20%;
        top:10%;
  
      }


    body


        
        .main-content
          header
            h2
              .header-title
                label(for='')
                  span.las.la-bars
                |                 STAY CLEAN
            |                 
            
        
        .recent-grid
          .Projects
            .card
              .card-header

                a.btn.btn-warning(href='/register', role='button') 
                  span.las.la-arrow-left
                   |  Back
                
                h3 Truck list.
                |                         
                
                  
                form.example(action='/truck')
                  input(type='text', placeholder='Search..', name='truckService')
                  |   
                  button(type='submit')
                    i.fa.fa-search
                            

                a.btn.btn-warning(href='/truck/truckReg', role='button') 
                  
                
                  span.las.la-truck 
                    |Add Truck
                   
                

              .card-body

              table
              table.table.table-hover
                thead
                        
                
          
                  tr
                      
                      th Reg number 
                      th code number
                      th truck service type
                      th Driver
                      th
                      
                
                tbody
                  if trucks.length
                  each truck in trucks
                      tr
                          
                          td #{truck.regNumber}
                          td #{truck.codeNumber}
                          td #{truck.truckService}                          
                          td #{truck.nin} 
                          td
                              a(href='/truck/update/'+truck._id)
                                span.icon 
                                  i.las.la-edit 
                          td
                              form(method="post" action='/request/delete')
                                        input(type="hidden", placeholder="", name="id", value=truck._id)
                                        button.btn.btn-success.btn-block(type="submit") Delete


          
                        
