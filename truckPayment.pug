extends layout
block content


  script.
      const service = document.getElementByID.service
      const charge = document.getElementByID.charge
      const payment = document.getElementByID.payment
      const actualAmount = document.getElementByID.actualAmount
      const actualAmountFunction = () = {
     
        if (charge.value === '175000'){
        const calc = 175000 * 0.9;
          actualAmount = calc
          return true;
        }

      }

      const calculation () => {
        actualAmountFunction();
      }
      document.truckPaymentForm.addEventListener('submit', calculation;) // Watches the validity of data filled in.


  body
    form.row.g-3(method='POST', action='/truckPayment/truckPayment', name='truckPayment')
      .col-md-6
        label.form-label(for='date') DATE FOR SERVICE
        |   
        input#date.form-control(type='date', name='date')
      |   
      .col-md-6
        label.form-label(for='truckCode') TRUCK ALLOCATED
        |     
        input#truckCode.form-control(type='text', name='truckCode')
      |   
      .col-md-3
        label.form-label(for='service') SERVICE TYPE
        |     
        select#service.form-select(name='service')
          option(selected='') Choose...
          |       
          option sewage
          |       
          option garbage
      |   
      .col-md-3
        label.form-label(for='charge') PRICE
        |     
        select#charge.form-select(name='charge')
          option(selected='') Choose...
          |       
          option 175000
          |       
          option 25000
      |   
      .col-md-3
        label.form-label(for='paymentPlan') PAYMENT PLAN
        |     
        select#paymentPlan.form-select(name='paymentPlan')
          option(selected='') Choose...
          |       
          option One Time
          |       
          option subscription
      |   
      .col-md-3
        label.form-label(for='actualAmount') ACTUAL AMOUNT PAID
        |     
        select#actualAmount.form-select(name='actualAmount')
          option(selected='') Choose...
          |       
          option One Time
          |       
          option subscription
      |   
      |   
      .col-12
        button.btn.btn-primary(type='submit') Sign in
